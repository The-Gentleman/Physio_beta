<%= form_for (@exercise) do |f| %>
    <br></br>
    <%= f.label :name %>:
    <%= f.text_field :name %>
    <br></br>
    <%= f.label :reps %>:
    <%= f.number_field :reps %>
     <br></br>
    <%= f.hidden_field :user_id, {:value => current_user.id} %>
    <%= f.hidden_field :patient_id, {:value => @patient_id} %>

    <%= f.submit "Create Exercise"%>
<% end %>